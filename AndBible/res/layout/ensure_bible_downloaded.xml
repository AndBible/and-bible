<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TextView android:id="@+id/waitForBible"
		android:text="@string/wait_for_bible" 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:layout_margin="20dip"
		android:textAppearance="?android:attr/textAppearanceMedium" />
	<LinearLayout android:id="@+id/progressControlContainer"
    	android:orientation="vertical"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/waitForBible"
    	android:layout_margin="20dip">
    </LinearLayout>    
	<TextView android:id="@+id/waitForBibleNotYet"
		android:layout_height="110dip" 
		android:layout_width="fill_parent"
		android:layout_margin="20dip"
		android:layout_below="@+id/progressControlContainer"/>

</RelativeLayout>