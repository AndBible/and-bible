<resources>
	<style name="AndBibleTheme" parent="@android:style/Theme.Light">
		<item name="android:windowTitleSize">30dp</item>
	</style>

    <style name="TitleBarTitle" parent="@android:style/WindowTitle">
    	<item name="android:maxWidth">@dimen/title_bar_title_width</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TitleBarButton">
    	<item name="android:background">@drawable/btn_tiny</item>
        <item name="android:layout_height">fill_parent</item>
		<item name="android:layout_centerInParent">true</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:padding">0dip</item>
		<item name="android:layout_marginBottom">2dip</item>
    </style>

    <style name="ChoosePassageBookGridFont">
        <item name="android:textSize">40sp</item>
        <item name="android:height">100dp</item>
    </style>
    <style name="HelpFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="InfoText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_margin">10dip</item>
    </style>
    		
    <style name="SplashTitleFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#1B1B02</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="SplashTopFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="SplashBottomFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#006A55</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
    </style>
</resources>