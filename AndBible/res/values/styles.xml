<resources>
	<style name="AndBibleTheme" parent="@android:style/Theme.Light">
		<item name="android:windowTitleSize">30dp</item>
	</style>

    <style name="TitleBarTitleButton" parent="TitleBarButton">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#BB000000</item>
        <item name="android:shadowRadius">2.75</item>
    </style>

    <style name="TitleBarToggleButton" parent="TitleBarButton">
    	<item name="android:background">@drawable/btn_tiny_toggle</item>
	</style>
	
    <style name="TitleBarButton">
    	<item name="android:background">@drawable/btn_tiny</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">60dip</item>
		<item name="android:layout_centerInParent">true</item>
		<item name="android:textSize">12sp</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">#FFFFF0</item>
		<item name="android:paddingLeft">7dip</item>
		<item name="android:paddingRight">7dip</item>
		<item name="android:paddingBottom">0dip</item>
		<item name="android:paddingTop">0dip</item>
		<item name="android:layout_marginBottom">1dip</item>
    </style>

    <style name="ChoosePassageBookGridFont">
        <item name="android:textSize">40sp</item>
        <item name="android:height">100dp</item>
    </style>
    <style name="HelpFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#FFCC73</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="InfoText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_margin">10dip</item>
    </style>
    		
    <style name="SplashTitleFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#FFCC73</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="SplashTopFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#FFCC73</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="SplashBottomFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFCC73</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
    </style>
</resources>