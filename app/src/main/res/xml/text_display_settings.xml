        <Preference
            android:key="FONT"
            android:title="@string/prefs_text_size_title"
            android:summary="@string/prefs_text_size_summary"
            />

        <Preference
            android:key="MARGINSIZE"
            android:title="@string/prefs_margin_size_title"
            android:summary="@string/prefs_margin_size_summary"
            />

        <Preference
            android:key="LINE_SPACING"
            android:title="@string/line_spacing_title"
            android:summary="@string/line_spacing_summary"
            />

        <SwitchPreferenceCompat
            android:key="REDLETTERS"
            android:title="@string/prefs_red_letter_title"
            android:summary="@string/prefs_red_letter_summary"
            />

        <SwitchPreferenceCompat
            android:key="VERSEPERLINE"
            android:title="@string/prefs_verse_per_line_title"
            android:summary="@string/prefs_verse_per_line_summary"
            />
        <SwitchPreferenceCompat
            android:key="JUSTIFY"
            android:title="@string/prefs_justify_title"
            android:summary="@string/prefs_justify_summary"
            />
        <SwitchPreferenceCompat
            android:key="HYPHENATION"
            android:title="@string/prefs_hyphenation_title"
            android:summary="@string/prefs_hyphenation_summary"
            />
    </PreferenceCategory>
</PreferenceScreen>
