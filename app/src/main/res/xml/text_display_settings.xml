            android:key="MORPH"
            android:title="@string/prefs_show_morphology_title"
            android:summary="@string/prefs_show_morphology_summary"
            />

        <SwitchPreferenceCompat
            android:key="FOOTNOTES"
            android:title="@string/prefs_show_footnotes_title"
            android:summary="@string/prefs_show_footnotes_summary"
