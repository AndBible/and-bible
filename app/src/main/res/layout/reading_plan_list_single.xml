<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:minHeight="?attr/listPreferredItemHeightLarge"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:minHeight="?attr/listPreferredItemHeightLarge"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

    <TextView android:id="@+id/plan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:singleLine="true"
        tools:text="1-Year Prof. Horner Reading Plan" />

    <TextView android:id="@+id/plan_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:singleLine="true"
        tools:text="This plan is designed to be read over pretty quick. Don't go into the details while reading. That helps to tie the whole of Scripture together better in your mind." />

    </LinearLayout>

    <ImageView
        android:id="@+id/info_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_info_black_24dp"
        />

</LinearLayout>
