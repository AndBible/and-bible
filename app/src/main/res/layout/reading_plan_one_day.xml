<?xml version="1.0" encoding="utf-8"?>
<!-- Generic status screen
 
 @author Martin Denham [mjdenham at gmail dot com]
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:id="@+id/topTextLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
    	android:layout_margin="10dip">
	   	<TextView android:id="@+id/descriptionTextView"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"/>
	   	
	    <LinearLayout android:id="@+id/datesLayout"
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">

	        <TextView android:id="@+id/dateTextView"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"/>
	        <TextView android:id="@+id/dayTextView"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent"
				android:gravity="right"/>
	        
	  	</LinearLayout>
	        	
	   	<TextView android:id="@+id/statusMessageTextView"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"/>
   	</LinearLayout>

    <!-- container for daily readings -->
	<ScrollView
		android:id="@+id/scrollLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/topTextLayout"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:layout_marginBottom="60dip">

		<TableLayout
			android:id="@+id/readingContainerLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dip"
			android:shrinkColumns="1"
			android:stretchColumns="1,2,3">

		</TableLayout>
	</ScrollView>
    
	<!-- Button bar -->
	<LinearLayout android:id="@+id/buttonPanelLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal">
	    <!-- Left spacer -->
	    <View
	        android:layout_width="0dip"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"/>
	
	 	<Button android:id="@+id/doneButton"
 			android:text="@string/done"
			android:onClick="onDoneButtonClick"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"/>

	    <!-- Right spacer -->
	    <View
	        android:layout_width="0dip"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	    />
	</LinearLayout>
		
</RelativeLayout>

