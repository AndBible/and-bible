<!-- Prepare criteria for a search
 
 @author Martin Denham [mjdenham at gmail dot com]
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	<EditText android:id="@+id/searchText"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_alignParentTop="true"
		android:imeOptions="actionSearch"
		android:inputType="textCapSentences"
		android:padding="10dip"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/searchText"
		app:layout_constraintBottom_toTopOf="@id/submit"
		>

		<LinearLayout android:id="@+id/rowAreaContainer"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">

			<LinearLayout
				android:id="@+id/column1Layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_weight="1"
				>

				<RadioGroup
					android:id="@+id/bibleSectionGroup"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="5dip">

					<TextView
						android:id="@+id/sectionGroupPrompt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/search_bible_section_group_prompt" />

					<RadioButton
						android:id="@+id/searchAllBible"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dip"
						android:checked="true"
						android:text="@string/search_all_bible" />

					<RadioButton
						android:id="@+id/searchOldTestament"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dip"
						android:text="@string/search_old_testament" />

					<RadioButton
						android:id="@+id/searchNewTestament"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dip"
						android:text="@string/search_new_testament" />

					<RadioButton
						android:id="@+id/searchCurrentBook"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dip"
						android:text="@string/search_current_book" />
				</RadioGroup>

				<LinearLayout
					android:id="@+id/fuzzySearchLayout"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="vertical">

					<CheckBox
						android:id="@+id/fuzzySearch"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/search_fuzzy"
						android:visibility="visible" />

					<LinearLayout
						android:id="@+id/fuzzySearchDetailsLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal"
						android:visibility="visible"
						android:paddingTop="0dip">

						<TextView
							android:id="@+id/editTextTextPersonName"
							android:layout_width="140dip"
							android:layout_height="wrap_content"
							android:layout_marginLeft="25dip"
							android:layout_weight="1"
							android:ems="10"
							android:inputType="textPersonName"
							android:text="@string/accuracy" />

						<SeekBar
							android:id="@+id/fuzzySearchAccuracy"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:max="10"
							android:min="3"
							android:stepSize="0.5" />
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/proximityLayout"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="vertical">

					<CheckBox
						android:id="@+id/proximitySearch"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/search_proximity"
						android:visibility="visible" />

					<LinearLayout
						android:id="@+id/proximityDetailsLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal"
						android:visibility="visible">

						<TextView
							android:id="@+id/proximityWordsLabel"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="25dip"
							android:layout_weight="99"
							android:ems="10"
							android:inputType="textPersonName"
							android:text="@string/words" />

						<Button
							android:id="@+id/proximityButtonSubtract"
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:layout_weight="1"
							android:text="-" />

						<EditText
							android:id="@+id/proximityWordNumber"
							android:layout_width="170dp"
							android:layout_height="wrap_content"
							android:layout_weight="99"
							android:gravity="center_horizontal|center_vertical"
							android:inputType="number"
							android:numeric="integer" />

						<Button
							android:id="@+id/proximityButtonAdd"
							android:layout_width="35dp"
							android:layout_height="35dp"
							android:layout_weight="1"
							android:text="+" />
					</LinearLayout>

				</LinearLayout>
				<LinearLayout
					android:id="@+id/strongsLayout"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="vertical">

					<CheckBox
						android:id="@+id/strongsSearch"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/search_strongs"
						android:visibility="visible" />

					<LinearLayout
						android:id="@+id/strongsDetailLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:visibility="visible"
						android:orientation="horizontal">

						<RadioGroup
							android:id="@+id/greekOrHebrewGroup"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1">


							<RadioButton
								android:id="@+id/searchHebrew"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="15dip"
								android:checked="true"
								android:layout_weight="1"
								android:text="@string/hebrew" />

							<RadioButton
								android:id="@+id/searchGreek"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="15dip"
								android:layout_weight="1"
								android:text="@string/greek" />

						</RadioGroup>
					</LinearLayout>
				</LinearLayout>


			</LinearLayout>

			<LinearLayout android:id="@+id/column2Layout"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:layout_height="wrap_content">

				<RadioGroup android:id="@+id/wordsGroup"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:padding="5dip">

					<TextView
						android:text="@string/search_words_group_prompt"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"/>
					<RadioButton android:id="@+id/allWords"
						android:layout_width="wrap_content"
						android:text="@string/search_all_words"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dip"
						android:checked="true"/>
					<RadioButton android:id="@+id/anyWord"
						android:layout_width="wrap_content"
						android:text="@string/search_any_word"
						android:layout_marginLeft="15dip"
						android:layout_height="wrap_content"/>
					<RadioButton android:id="@+id/phrase"
						android:layout_width="wrap_content"
						android:text="@string/search_phrase"
						android:layout_marginLeft="15dip"
						android:layout_height="wrap_content"/>
					<RadioButton android:id="@+id/placeholder1"
						android:layout_width="wrap_content"
						android:text="@string/search_phrase"
						android:layout_marginLeft="15dip"
						android:visibility="invisible"
						android:layout_height="wrap_content"/>
				</RadioGroup>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<CheckBox
						android:id="@+id/includeAllEndings"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="0.1"
						android:text="@string/search_include_all_endings"
						android:visibility="visible" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<CheckBox
						android:id="@+id/rememberSearchText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/search_remember_search_text" />

				</LinearLayout>

				<LinearLayout
					android:id="@+id/decoratedSearchLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical"
					android:visibility="visible">

					<CheckBox
						android:id="@+id/decoratedTextShow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/search_showDecoratedText"
						android:visibility="visible" />

					<LinearLayout

						android:id="@+id/decoratedSearchDetailLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal"
						android:visibility="visible">

						<TextView
							android:id="@+id/decoratedSearchString"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="20dp"
							android:text="decorated search text" />
					</LinearLayout>
				</LinearLayout>


			</LinearLayout>

		</LinearLayout>

	</ScrollView>

	<Button
		android:id="@+id/submit"
		style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:text="@string/search"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/textClear"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_marginStart="-35dp"
		android:layout_marginBottom="-35dp"
		android:text="X"
		android:textSize="12sp"
		app:layout_constraintBottom_toTopOf="@+id/searchText"
		app:layout_constraintStart_toEndOf="@+id/searchText" />
</androidx.constraintlayout.widget.ConstraintLayout>
