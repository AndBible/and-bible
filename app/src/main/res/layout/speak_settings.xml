<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/buttonsLayout"
            >
        <LinearLayout
                android:id="@+id/panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider"
                android:dividerPadding="@dimen/row_divider_padding"
                android:padding="5dip"
                android:showDividers="middle"
                >
           <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:dividerPadding="@dimen/row_divider_padding"
                    android:showDividers="middle"
                    >
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dip"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/speak_title_padding"
                            android:textStyle="bold"
                            android:textSize="@dimen/speak_titles_text_size"
                            android:text="@string/speak_settings_title"
                            />
                    <CheckBox
                            android:text="@string/conf_speak_synchronize"
                            android:layout_marginStart="@dimen/speak_row_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/synchronize"
                            android:onClick="onSettingsChange"/>
                </LinearLayout>
                <CheckBox
                        android:text="@string/conf_replace_divinename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/speak_row_padding"
                        android:id="@+id/replaceDivineName"
                        android:onClick="onSettingsChange"/>
                <CheckBox
                    android:text="@string/conf_speak_multitranslation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/speak_row_padding"
                    android:id="@+id/multiTranslation"
                    android:onClick="onSettingsChange"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dip"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dip"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/speak_titles_text_size"
                            android:padding="@dimen/speak_title_padding"
                            android:layout_alignParentStart="true"
                            android:textStyle="bold"
                            android:text="@string/speak_bookmarking_settings_title"
                            />

                    <ImageButton
                            android:id="@+id/bookmarkHelpButton"
                            android:src="@android:drawable/ic_menu_help"
                            android:contentDescription="@string/speak_bookmark_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:onClick="onHelpButtonClick"
                            style="@style/Widget.Design.FloatingActionButton"/>
                </RelativeLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/speak_row_padding"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                    <CheckBox
                            android:text="@string/conf_speak_auto_bookmark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/autoBookmark"
                            android:onClick="onSettingsChange"/>

                    <CheckBox
                            android:text="@string/conf_save_playback_settings_to_bookmarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/restoreSettingsFromBookmarks"
                            android:onClick="onSettingsChange"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
     <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingStart="@dimen/speak_row_padding"
                android:id="@+id/statusText"
                android:background="@color/speak_status_background"
                android:text="*Gen.1.1*"/>

        <!-- Button bar with OK button -->
        <LinearLayout
                android:id="@+id/button_panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <ImageButton
                    android:id="@+id/bookmarkButton"
                    app:srcCompat="@drawable/ic_bookmark_24dp"
                    android:contentDescription="@string/bookmarks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onBookmarkButtonClick"/>
            <ImageButton
                    android:id="@+id/rewindButton"
                    android:src="@android:drawable/ic_media_rew"
                    android:contentDescription="@string/rewind"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"/>
            <ImageButton
                    android:id="@+id/prevButton"
                    android:src="@android:drawable/ic_media_previous"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:contentDescription="@string/speak_previous"
                    />
            <ImageButton
                    android:id="@+id/stopButton"
                    android:src="@drawable/ic_media_stop"
                    android:contentDescription="@string/stop"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"/>
            <ImageButton
                    android:id="@+id/speakPauseButton"
                    android:src="@android:drawable/ic_media_play"
                    android:contentDescription="@string/speak"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"/>
            <ImageButton
                    android:id="@+id/nextButton"
                    android:src="@android:drawable/ic_media_next"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"
                    android:contentDescription="@string/speak_next"/>
            <ImageButton
                    android:id="@+id/forwardButton"
                    android:src="@android:drawable/ic_media_ff"
                    android:contentDescription="@string/forward"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onButtonClick"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
