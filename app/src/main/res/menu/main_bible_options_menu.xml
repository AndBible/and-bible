	<item android:id="@+id/fullscreen"
		android:title="@string/toggle_fullscreen"
		android:icon="@drawable/ic_full_screen_24"/>
	/>
	<item android:id="@+id/nightMode"
		android:title="@string/options_menu_night_mode"
