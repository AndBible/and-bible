    <style name="InfoText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_margin">10dip</item>
    </style>
    <style name="SplashTitleFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="SplashTopFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="SplashBottomFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="SmallGreyText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#C0C0C0</item>
    </style>

    <style name="TransportButtonTheme">
        <item name="android:tint">?attr/transportButtonColor</item>
    </style>
    <style name="EditBookmarkLabelCategoryTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingStart">2dip</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>
    <style name="EditBookmarkLabelItemTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:paddingStart">2dip</item>
        <item name="android:paddingEnd">5dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
    </style>
    <style name="EditBookmarkLabelItemIcon">
        <item name="android:scaleY">0.8</item>
        <item name="android:scaleX">0.8</item>
    </style>
</resources>
